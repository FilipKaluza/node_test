extends ../_main

block prepend title
    | Blog

block main
    <link rel="stylesheet" type="text/css" href="/static/css/blog.css" >
    <div class="container-fluid">
        <div class="hero-wrap js-fullheight hero-wrap" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-start" data-scrollax-parent="true" >
        <div class="col-md-12 ftco-animate fadeInUp ftco-animated blog_header">
            <h2 class="main_heading_blog">Vitaj na našom blogu !</h2>
            <h1 class="mb-4 mb-md-0 subheading_blog">Klikni na šípku nižšie, a dozvi sa viac :)</h1>
            <a href=#blog > <img src="/static/images/arrow_down.svg" class="arrow_down"> </a>
            <div class="mouse-wheel"><span class="ion-ios-arrow-round-down"></span></div>
        </div>
        </div>
    </div>
    </div>
    section#blog
        if results
        div.row
        each article in articles
            <div class="blogs_container col col-12 col-md-5 mt-5 mx-auto">
                <div class="case">
                    <div class="row">
                        <div class="col-12 col-md-6 d-flex">
                            <img src=#{article.image} class="img-fluid blog_img" >
                        </div>
                        <div class="col-12 col-md-6  d-flex">
                            <div class="text w-100 pl-md-3">
                                h1.blog_title=article.title
                                p.blog_description=article.description
                                <div class="meta">
                                    p=article.createdAt.toLocaleDateString()
                                </div>
                                a(href=`/blog/${article.slug}`).btn.btn_readmore Čítať viac

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        


extends ../_main

block prepend title
    | Koláče

block main
    <link rel="stylesheet" type="text/css" href="/static/css/galery.css" >
    section#kolace.container.m-auto.galery_basic_show
        div.row.col-12.d-flex.justify-content-center.mt-5.mb-3
            a(href="/galery/torty").p-1 <button type="button" class='btn btn-outline-dark btn-galery'>Torty</button> 
            a(href="/galery/kolace").p-1 <button type="button" class="active btn btn-outline-dark btn-galery" >Koláče</button> 
            a(href="/galery/dezerty").p-1 <button  type="button" class="btn btn-outline-dark btn-galery">Dezerty</button> 

        <div class="row" >
                <img src="/static/images/kolace/dezerty.svg" onclick="openModal();currentSlide(1);lockScroll();hide();" class="hover-shadow col-12 col-md-3 galery_img"> 
  
                <img src="/static/images/kolace/kolace.svg"  onclick="openModal();currentSlide(2);lockScroll();hide();" class="hover-shadow col-12 col-md-3 galery_img">
 
                <img src="/static/images/kolace/dezerty.svg" onclick="openModal();currentSlide(3);lockScroll();hide();" class="hover-shadow col-12 col-md-3 galery_img">
 
                <img src="/static/images/kolace/kolace.svg"  onclick="openModal();currentSlide(4);lockScroll();hide();" class="hover-shadow col-12 col-md-3 galery_img">
        </div>
    // Lightbox
    <div id="myModal" class="modal">
        <span class="close cursor" onclick="closeModal();visible();">&times;</span>
        <img class="logo_lightbox" src="/static/images/logo_top_nav_white.svg">

        <div class="modal-content">
            
            <div class="mySlides">
            <img src="/static/images/kolace/dezerty.svg" class="img-fluid lightbox_pic"> 

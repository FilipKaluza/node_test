            <img src="/static/images/kolace/dezerty.svg" class="img-fluid lightbox_pic" > 
            </div>

            <div class="mySlides">
            <img src="/static/images/kolace/kolace.svg" class="img-fluid lightbox_pic" > 
            </div>

            <!-- Next/previous controls -->
            <a class="prev lightbox_pic" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next lightbox_pic" onclick="plusSlides(1)">&#10095;</a>

            <!-- Caption text -->
            <div class="caption-container">
                <p id="caption" class="mt-3"></p>
            </div>

            <!-- Thumbnail image controls -->
            <div class="row nav_lightbox mt-2">
        
                <img class="demo col-1 img-fluid"  src="/static/images/kolace/dezerty.svg"  onclick="currentSlide(1)" alt="Nature" >
